<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    tools:context=".DeleteChatRoom">


    <RelativeLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_gravity="center_vertical"
        android:background="@drawable/roomshape"
        android:focusableInTouchMode="false">




        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:src="@drawable/roomc" />

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Chat Room"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/room_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/room_name"
            android:layout_below="@+id/room_name"
            android:text="Room 112"
            android:textColor="@color/input_login"
            android:textSize="10sp"/>

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/chk_selected"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="15dp"
            android:background="@android:drawable/ic_delete"
            android:paddingBottom="30dp" />

        <CheckBox
            android:id="@+id/chk_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/room_name"
            android:layout_toStartOf="@+id/btn_delete"
            android:layout_weight="1" />


    </RelativeLayout>


</android.support.design.widget.AppBarLayout>